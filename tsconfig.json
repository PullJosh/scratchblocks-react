{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types/", "./types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
